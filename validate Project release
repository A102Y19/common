def validate_projectrelease(men_file_path, folder_name):
    try:
        if not os.path.exists(men_file_path):
            print(f"❌ MEN file not found at: {men_file_path}")
            return False

        with open(men_file_path, 'r') as file:
            lines = file.readlines()

        updated = False
        with open(men_file_path, 'w') as file:
            for line in lines:
                if line.strip().startswith("OM_PROJECTRELEASE="):
                    new_line = f"OM_PROJECTRELEASE={folder_name}\n"
                    file.write(new_line)
                    updated = True
                    print(f"✅ Updated OM_PROJECTRELEASE line: {new_line.strip()}")
                else:
                    file.write(line)

        if not updated:
            print("⚠️ OM_PROJECTRELEASE line not found in the file.")
            return False

        return True

    except Exception as e:
        print(f"❌ Error while updating .men file: {e}")
        return False


    elif action == "validate_projectrelease" and requirement == "Y" and input_value:
    if not folder_created_name:
        print("❌ No folder name available from create_folder step.")
    else:
        validate_projectrelease(input_value, folder_created_name)
