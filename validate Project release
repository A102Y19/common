def update_project_release(file_path, new_value):
    with open(file_path, 'r') as file:
        lines = file.readlines()

    with open(file_path, 'w') as file:
        for line in lines:
            if line.startswith("OM_PROJECTRELEASE="):
                file.write(f"OM_PROJECTRELEASE={new_value}\n")
            else:
                file.write(line)

# Example usage
file_path = r"C:\PAK\project.men"  # .men file path ikkada ivvali
new_value = "YYYY"  # Replace value ikkada ivvali
update_project_release(file_path, new_value)
