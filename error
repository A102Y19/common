from pywinauto import Desktop
import time

def handle_notepad_if_opened(timeout=60):
    print("🔍 Checking if Notepad is open after ENTER...")
    notepad_window = None
    start_time = time.time()

    while notepad_window is None and (time.time() - start_time < timeout):
        try:
            windows = Desktop(backend="uia").windows()
            for win in windows:
                if "Notepad" in win.window_text():
                    print("✅ Notepad window found.")
                    notepad_window = win
                    break
        except Exception as e:
            print(f"Error finding Notepad: {e}")
        time.sleep(3)

    if notepad_window is None:
        print("✅ No Notepad opened.")
        return

    try:
        print("🔍 Searching for Edit control...")
        edit_controls = notepad_window.descendants(control_type="Edit")
        if not edit_controls:
            print("❌ Could not find Edit box in Notepad.")
            return

        text = edit_controls[0].window_text()
        lines = text.strip().splitlines()

        error_lines = [line for line in lines if "error" in line.lower()]
        if error_lines:
            print("🛑 Error lines found in Notepad:")
            for line in error_lines:
                print(f"> {line}")
        else:
            print("✅ No error lines found in Notepad.")

        notepad_window.close()
        print("✅ Closed Notepad.")
    except Exception as e:
        print(f"❌ Error reading or closing Notepad: {e}")
