def wait_for_schema_popup(timeout=600):
    print("Waiting for schema popup...")

    start_time = time.time()
    found = False

    while time.time() - start_time < timeout:
        try:
            app = Application(backend="uia").connect(title_re=".*Information.*")
            dlg = app.window(title_re=".*Information.*")
            if dlg.exists() and dlg.is_visible():
                text_ctrl = dlg.child_window(control_type="Text")
                message = text_ctrl.window_text()
                
                if "Update Installer" in message:
                    print(f"[Update Installer Message] -> {message}")
                    ok_btn = dlg.child_window(title="OK", control_type="Button")
                    ok_btn.click()
                    found = True
                    break
        except Exception:
            pass

        time.sleep(2)

    if not found:
        print("Schema popup not found within timeout.")
