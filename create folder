# Function to create a folder at given path
def create_folder(input_value):
    try:
        base_path, folder_name = [x.strip() for x in input_value.split(",", 1)]
        full_path = os.path.join(base_path, folder_name)

        if not os.path.exists(full_path):
            os.makedirs(full_path)
            print(f"âœ… Folder created: {full_path}")
        else:
            print(f"ğŸ“ Folder already exists: {full_path}")

    except ValueError:
        print(f"âŒ Invalid input format for folder creation: '{input_value}'")
        print("   â¡ï¸ Format should be: 'C:\\Path, FolderName'")
    except Exception as e:
        print(f"âŒ Error creating folder: {e}")





        elif action == "create folder" and requirement == "Y" and input_value:
        create_folder(input_value)
