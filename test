import pandas as pd
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time

# Load Excel file
file_path = "C:/PAK/PAK_Standard_requirement.xlsx"
df = pd.read_excel(file_path)

# Set up Edge driver options
options = webdriver.EdgeOptions()
options.add_argument("--log-level=3")

# Open Edge browser
driver = webdriver.Edge(options=options)
time.sleep(5)  # Initial wait to ensure browser stability

def access_ftp(url):
    """Function to access FTP URL and enter password if required."""
    print(f"‚úÖ Accessing FTP: {url}")
    
    driver.get(url)
    try:
        # Wait for the password input field (ID: sharecode) if present
        password_input = WebDriverWait(driver, 10).until(
            EC.presence_of_element_located((By.ID, "sharecode"))
        )
        password_input.send_keys("admin")  # Hardcoded password (modify later)
        password_input.send_keys(Keys.RETURN)
        print(f"üîê Logged in successfully to FTP: {url}")

    except Exception:
        print(f"‚ö†Ô∏è No password prompt found, continuing without login.")

    time.sleep(3)  # Give time before executing the next function

def access_PAK_filepath(url):
    """Function to access PAK file path in a new browser instance."""
    print(f"üöÄ Opening PAK File Path: {url}")

    try:
        new_driver = webdriver.Edge(options=options)  # Open a new Edge browser
        time.sleep(3)
        new_driver.get(url)  # Open the given URL
        print(f"üéØ Successfully opened PAK file path: {url}")

    except Exception as e:
        print(f"‚ùå Error while opening PAK file path: {e}")

# Main processing loop
for index, row in df.iterrows():
    action = row["Action"].strip().lower() if pd.notna(row["Action"]) else ""
    requirement = row["Requirement"].strip().upper() if pd.notna(row["Requirement"]) else "N"
    input_value = row["Inputs"].strip() if pd.notna(row["Inputs"]) else ""

    print(f"\nüîÑ Checking action: {action}, Requirement: {requirement}")

    if action == "access ftp path" and requirement == "Y" and input_value:
        print(f"‚úÖ Processing FTP path: {input_value}")
        access_ftp(input_value)

    if action == "access pak file path" and requirement == "Y":
        print(f"üü¢ PAK file path found, preparing to execute function...")

        if input_value:
            print(f"üöÄ Calling access_PAK_filepath({input_value})")
            access_PAK_filepath(input_value)
            print("üéØ Finished executing access_PAK_filepath()")
        else:
            print("‚ö†Ô∏è PAK File Path URL is empty, skipping execution")

# Close the main driver after execution
driver.quit()

print("\n‚úÖ Script Execution Completed!")
input("Press Enter to exit...")
