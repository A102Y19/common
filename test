from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

def get_file_class(driver, file_name):
    try:
        print(f"üîç Searching for file: {file_name}...")

        file_xpath = f"//div[contains(@class, 'file-list-item') and contains(text(), '{file_name}')]"

        file_element = WebDriverWait(driver, 20).until(
            EC.presence_of_element_located((By.XPATH, file_xpath))
        )

        file_class = file_element.get_attribute("class")  # Extract class attribute

        print(f"‚úÖ Found file: {file_name}")
        print(f"üìå Class of the file element: {file_class}")

        return file_class

    except Exception as e:
        print(f"‚ùå ERROR: File '{file_name}' not found. Details: {e}")
        return None
